<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender only - no file logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application specific logger -->
    <logger name="com.traefikconfig" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- HTTP client logging (for debugging API calls) -->
    <logger name="org.springframework.web.client" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="dev">
        <logger name="com.traefikconfig" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.traefikconfig" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
        <root level="WARN"/>
    </springProfile>
</configuration>